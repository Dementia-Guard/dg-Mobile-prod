<!-- res/drawable/custom_progress_bar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (unfilled portion) -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Light gray for unfilled part -->
            <corners android:radius="3dp" />  <!-- Optional: rounded corners -->
        </shape>
    </item>

    <!-- Progress (filled portion) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/primary" /> <!-- Change this to your desired completed color -->
                <corners android:radius="3dp" />  <!-- Match background radius -->
            </shape>
        </clip>
    </item>
</layer-list>